<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_Small"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/userInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/usericon"
            android:layout_width="@dimen/margin_Large"
            android:layout_height="@dimen/margin_Large"
            android:layout_margin="@dimen/margin_Small"
            android:src="@drawable/profile" />

        <com.example.pc.khaledwaleedshopping.Support.design.CustomeTextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_Small"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="username"
            android:textColor="@color/black_fat7"
            android:textSize="@dimen/text_VerySmall" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgProduct"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/loading" />

    <RelativeLayout
        android:id="@+id/right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_VerySmall"
        android:layout_marginLeft="@dimen/margin_Medium"
        android:layout_marginRight="@dimen/margin_Medium"
        android:layout_marginTop="@dimen/margin_Medium">

        <com.example.pc.khaledwaleedshopping.Support.design.CustomeTextView
            android:id="@+id/love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/love"
            android:drawablePadding="5dp"
            android:text="25"
            android:textSize="@dimen/text_VerySmall" />

        <com.example.pc.khaledwaleedshopping.Support.design.CustomeTextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawablePadding="10dp"
            android:text="L.E~25"
            android:textColor="@color/black_8am2"
            android:textSize="@dimen/text_Small" />

    </RelativeLayout>

    <com.example.pc.khaledwaleedshopping.Support.design.CustomeTextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_Medium"
        android:text="Nike"
        android:textSize="@dimen/text_VerySmall" />

    <com.example.pc.khaledwaleedshopping.Support.design.CustomeTextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_Medium"
        android:text="10/xl"
        android:textSize="@dimen/text_VerySmall" />
</LinearLayout>
