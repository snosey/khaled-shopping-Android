<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/silver"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shadow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_Medium"
            android:src="@drawable/back"
            android:tint="@color/black_8am2" />

        <com.example.pc.khaledwaleedshopping.Support.design.CustomeTextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_Small"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:textColor="@color/black_8am2"
            android:textSize="@dimen/text_Medium"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- images -->
            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/forumImages"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_Large"
                android:background="@color/silver" />

            <!-- title -->
            <com.example.pc.khaledwaleedshopping.Support.design.CustomeTextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_Small"
                android:textColor="@color/black_8am2"
                android:textSize="@dimen/text_Large" />

            <!-- content -->
            <com.example.pc.khaledwaleedshopping.Support.design.CustomeTextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_Small"
                android:textColor="@color/black_fat7"
                android:textSize="@dimen/text_Small" />

            <!-- Comments -->
            <com.example.pc.khaledwaleedshopping.Support.design.CustomeTextView
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_Medium"
                android:layout_marginTop="@dimen/margin_Medium"
                android:background="@drawable/shadow"
                android:gravity="center"
                android:padding="@dimen/margin_Small"
                android:text="Comments ( 0 )"
                android:textSize="@dimen/text_Medium" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
