<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:background="@color/whiteDark"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/silver">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/shadow"
            android:orientation="horizontal">


            <com.example.pc.khaledwaleedshopping.Support.design.CustomeTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_Medium"
                android:layout_weight=".8"
                android:gravity="left|center"
                android:text="Home"
                android:textColor="@color/black_8am2"
                android:textSize="@dimen/text_Medium" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_Medium"
                android:visibility="gone"
                android:layout_weight=".1"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:tint="@color/black_8am2" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_Medium"
                android:layout_weight=".1"
                android:onClick="search"
                android:src="@drawable/search"
                android:tint="@color/black_8am2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="5">


            <ImageView
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_Medium"
                android:layout_weight="1"
                android:padding="2dp"
                android:src="@drawable/home"
                android:tint="@color/mainColor" />

            <ImageView
                android:id="@+id/favorites"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_Medium"
                android:layout_weight="1"
                android:onClick="favorites"
                android:padding="2dp"
                android:src="@drawable/myfavor"
                android:tint="@color/secondColor" />

            <ImageView
                android:id="@+id/add_product"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="addProduct"
                android:paddingBottom="3dp"
                android:src="@drawable/add"
                android:tint="@color/red" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_Medium"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="msg"
                    android:padding="2dp"
                    android:src="@drawable/msg"
                    android:tint="@color/secondColor" />

                <com.example.pc.khaledwaleedshopping.Support.design.CustomeTextView
                    android:id="@+id/msgNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/margin_Small"
                    android:background="@drawable/button"
                    android:backgroundTint="@color/red"
                    android:padding="@dimen/margin_VerySmall"
                    android:textColor="@color/white"
                    android:textSize="7sp"
                    android:visibility="invisible" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_Medium"
                android:layout_weight="1"
                android:onClick="profile"
                android:padding="2dp"
                android:src="@drawable/myprofile"
                android:tint="@color/secondColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/options"
            android:layout_marginBottom="@dimen/margin_Small"
            android:layout_below="@id/top"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="0dp"
                android:text="Filter"
                android:id="@+id/filter"
                android:layout_weight=".5"
                android:textSize="@dimen/text_VerySmall"
                android:layout_marginEnd="@dimen/margin_VerySmall"
                android:background="@color/secondColor"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0dp"
                android:text="Sort"
                android:id="@+id/sort"
                android:textSize="@dimen/text_VerySmall"
                android:layout_marginStart="@dimen/margin_VerySmall"
                android:background="@color/secondColor"
                android:layout_weight=".5"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/productList"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom"
            android:layout_below="@id/options"
            android:layout_margin="@dimen/margin_Medium" />

        <com.miguelcatalan.materialsearchview.MaterialSearchView
            android:id="@+id/searchbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />


    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>